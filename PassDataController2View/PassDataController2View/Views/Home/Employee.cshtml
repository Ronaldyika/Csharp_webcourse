
@{
    ViewBag.Title = "Employee";
}

<h2>Employee</h2>

<table>
    <tr>
        <th>EmployeeID</th>
        <th>Name</th>
        <th>Position</th>
        <th>Maried</th>
    </tr>
    @foreach (var _employee in @ViewBag.Employee) { 
    <tr>
        <td>@_employee.EmployeeID</td>
        <td>@_employee.Name</td>
        <td>@_employee.Position</td>
        <td>
            @if (@_employee.Maried == true)
            {
                <p>married</p>
            }
            else
            {
                <p>single</p>
            }
        </td>
    </tr>
    }
</table>